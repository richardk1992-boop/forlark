{
  "manifest_version": 3,
  "name": "飞书文档内容读取器",
  "version": "1.1.0",
  "description": "读取飞书文档内容并提供复制功能，支持用户授权访问私密文档",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "webNavigation",
    "tabs"
  ],
  "host_permissions": [
    "https://*.feishu.cn/*",
    "https://*.larksuite.com/*",
    "https://*.larkoffice.com/*",
    "https://open.feishu.cn/*",
    "https://open.larksuite.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.feishu.cn/*",
        "https://*.larksuite.com/*",
        "https://*.larkoffice.com/*",
        "https://feishu.cn/*",
        "https://larksuite.com/*",
        "https://larkoffice.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
